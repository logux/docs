{
  "name": "logux-docs",
  "private": true,
  "scripts": {
    "lint": "remark --no-stdout --frail --quiet *.md */*.md guide/*/*.md",
    "spell": "yaspeller *.md */*.md guide/*/*.md",
    "test": "./scripts/check-order.js && yarn lint && yarn spell"
  },
  "devDependencies": {
    "fast-glob": "^3.2.7",
    "nano-staged": "^0.1.5",
    "remark-cli": "^10.0.1",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-lint-no-empty-sections": "^4.0.0",
    "remark-preset-lint-recommended": "^6.1.1",
    "remark-validate-links": "^11.0.2",
    "simple-git-hooks": "^2.7.0",
    "yaspeller": "^8.0.0"
  },
  "repository": "logux/docs",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "order.json": "./scripts/check-order.js",
    "*.md": [
      "yaspeller",
      "remark --no-stdout --frail --quiet",
      "./scripts/check-order.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        "space"
      ],
      [
        "remark-lint-no-shortcut-reference-link",
        false
      ],
      [
        "remark-lint-no-dead-urls",
        {
          "skipOffline": true
        }
      ],
      "remark-validate-links",
      "remark-lint-no-empty-sections"
    ]
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      "\\d+ “[^”]+”",
      "\\d+kB"
    ],
    "dictionary": [
      "Logux",
      "webapp",
      "GraphQL",
      "WebSocket",
      "UI",
      "UX",
      "Redux",
      "JS",
      "js",
      "CRDT",
      "unsubscribe",
      "unsubscribes",
      "unsent",
      "A’s",
      "B’s",
      "Gitter",
      "io",
      "logux",
      "Preact",
      "redux",
      "Redux’s",
      "favicon",
      "subprotocol",
      "subprotocols",
      "npm",
      "UUID",
      "SemVer",
      "JWT",
      "subscribe’s",
      "Webpack",
      "OAuth or",
      "WebAuthn",
      "bundler",
      "LTE",
      "TLS",
      "opens WebSocket",
      "serializable",
      "meta’s",
      "timestamp",
      "Vue",
      "Vue’s",
      "Vuex",
      "instance",
      "sourcing",
      "Versioning",
      "unsynchronized",
      "IndexedDB",
      "KB",
      "generics",
      "Django",
      "authenticator",
      "Logux’s",
      "Menshykov",
      "CLI",
      "composable",
      "P2P",
      "IPFS",
      "devtools",
      "Kubernetes",
      "endpoint",
      "schemas"
    ]
  }
}
