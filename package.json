{
  "name": "logux-docs",
  "private": true,
  "scripts": {
    "lint": "remark --no-stdout --frail --quiet *.md */*.md guide/*/*.md",
    "spell": "yaspeller *.md */*.md guide/*/*.md",
    "test": "./scripts/check-order && yarn lint && yarn spell"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.0",
    "chalk": "^3.0.0",
    "globby": "^11.0.0",
    "remark-cli": "^7.0.1",
    "remark-lint-no-dead-urls": "^1.0.1",
    "remark-lint-no-empty-sections": "^3.0.0",
    "remark-preset-lint-recommended": "^3.0.3",
    "remark-validate-links": "^9.1.0",
    "yaspeller": "^6.0.2"
  },
  "repository": "logux/docs",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=13.2.0"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        "space"
      ],
      [
        "remark-lint-no-shortcut-reference-link",
        false
      ],
      [
        "remark-lint-no-dead-urls",
        {
          "skipOffline": true
        }
      ],
      "remark-validate-links",
      "remark-lint-no-empty-sections"
    ]
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      "\\d+ “[^”]+”",
      "\\d+kB"
    ],
    "dictionary": [
      "Logux",
      "webapp",
      "GraphQL",
      "WebSocket",
      "UI",
      "UX",
      "Redux",
      "JS",
      "js",
      "CRDT",
      "unsubscribe",
      "unsent",
      "A’s",
      "B’s",
      "Gitter",
      "io",
      "logux",
      "Preact",
      "redux",
      "Redux’s",
      "favicon",
      "subprotocol",
      "subprotocols",
      "npm",
      "UUID",
      "SemVer",
      "JWT",
      "subscribe’s",
      "Webpack",
      "OAuth or",
      "WebAuthn",
      "bundler",
      "LTE",
      "TLS",
      "opens WebSocket",
      "serializable",
      "meta’s",
      "timestamp",
      "Vue",
      "Vuex",
      "instance",
      "sourcing",
      "Versioning",
      "unsynchronized",
      "IndexedDB",
      "KB"
    ]
  }
}
